<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nfcContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NFCReaderActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/takingAttendance"
        android:textSize="36sp"
        android:layout_centerInParent="true"
        android:id="@+id/scanningtitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pleasetapyourcard"
        android:layout_below="@+id/scanningtitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/stopscanningbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopScanningButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>