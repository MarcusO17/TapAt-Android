<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nfcContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NFCReaderActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/card" />

    <TextView
        android:id="@+id/scanningtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/jost_light"
        android:text="@string/takingAttendance"
        android:textColor="#5A5656"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pleasetapyourcard"
        android:layout_below="@+id/scanningtitle"
        android:layout_centerHorizontal="true"
        android:textColor="#5A5656"
        android:fontFamily="@font/jost_light"/>

    <Button
        android:id="@+id/stopscanningbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/red_hat_text"
        android:text="@string/stopScanningButton"
        android:textColor="#5A5656"
        android:textSize="17sp"
        android:textStyle="bold" />



</RelativeLayout>