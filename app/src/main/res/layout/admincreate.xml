<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    android:background="@drawable/background_picture">

    <!-- Create Title -->
    <TextView
        android:id="@+id/createTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/julius_sans_one"
        android:gravity="center"
        android:text="Add Fragment Title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- Container for UI elements -->
    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dynamically generated UI elements will be added here -->

    </LinearLayout>

    <!-- Add button -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/red_hat_text"
        android:textStyle="bold"
        android:textSize="17sp"/>


</LinearLayout>
