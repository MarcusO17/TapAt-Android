<!-- fragment_admin_dashboard.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_picture">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:autoSizeTextType="none"
        android:fontFamily="@font/julius_sans_one"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textSize="45dp" />

    <!-- Add your buttons for Student, Lecturer, Course here -->
    <Button
        android:id="@+id/studentButton"
        android:background="@drawable/button_background"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Student"
        android:textColor="@color/black"
        android:fontFamily="@font/jost_light"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/lecturerButton"
        android:background="@drawable/button_background"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Lecturer"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/jost_light" />

    <Button
        android:id="@+id/courseButton"
        android:background="@drawable/button_background"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Course"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/jost_light" />

    <!-- Create a horizontal LinearLayout for NFC Reader and NFC Writer buttons -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nfcReaderButton"
            android:background="@drawable/button_background"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#0Dffffff"
            android:text="NFC Reader"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/jost_light"/>

        <Button
            android:id="@+id/nfcWriterButton"
            android:background="@drawable/button_background"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#0Dffffff"
            android:text="NFC Writer"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/jost_light"/>

    </LinearLayout>
</LinearLayout>