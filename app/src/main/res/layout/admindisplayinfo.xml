<!-- admindisplayinfo.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Display Fragment Title -->
    <TextView
        android:id="@+id/displayFragmentTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Title"
        android:textSize="18sp" />

    <!-- Display Button Name -->
    <TextView
        android:id="@+id/displayButtonNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Button Name"
        android:textSize="16sp" />

    <!-- Add your UI elements for displaying admin information here -->

</LinearLayout>
