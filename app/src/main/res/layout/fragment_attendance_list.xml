<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceListFragment"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/attendance_taking_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jost_light"
        android:text="@string/starttakingattendance"
        android:textColor="#5A5656"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit_attendance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/attendance_taking_button"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jost_light"
        android:text="@string/submit"
        android:textColor="#5A5656"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/attendancelistsearchbar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/attendance_taking_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_bar_background"
        android:backgroundTint="@color/white"
        android:hint="Search"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#5A5656"
        android:textColorHint="#5A5656" />

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendancelistrecyclerview"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_below="@id/attendancelistsearchbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />



</RelativeLayout>