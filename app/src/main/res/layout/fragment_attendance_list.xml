<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceListFragment"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attendance_taking_button"
        android:text="@string/starttakingattendance"
        android:layout_alignParentEnd="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_attendance_button"
        android:text="@string/submit"
        android:layout_toLeftOf="@+id/attendance_taking_button"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/attendancelistsearchbar"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_below="@id/attendance_taking_button"/>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/attendancelistrecyclerview"
        android:background="@color/white"
        android:layout_below="@id/attendancelistsearchbar"
        />


</RelativeLayout>