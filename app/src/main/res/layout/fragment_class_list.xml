<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassListFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_class"
        android:text="@string/addclassbutton"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/red_hat_text"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <!-- Recycler View here -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/button_add_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/classlistrecyclerview"
        />



</RelativeLayout>