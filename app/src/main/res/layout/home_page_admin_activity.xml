<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageAdminActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/ic_launcher_background">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dark_green_background_placeholder">

        <TextView
            android:id="@+id/homepagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:text="@string/home_page_title"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/homepagewelcome"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:text="@string/home_page_welcome_message"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:weightSum="4">

        <Button
            android:id="@+id/student_list_button_admin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:textColor="#1FAD5F"
            android:text="@string/student_list_button_text"
            android:drawableEnd="@drawable/student_list_icon"></Button>

        <Button
            android:id="@+id/lecturer_list_button_admin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:textColor="#1FAD5F"
            android:text="@string/lecturer_list_button_text"
            android:drawableEnd="@drawable/lecturer_list_icon"></Button>

        <Button
            android:id="@+id/course_list_button_admin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:textColor="#1FAD5F"
            android:text="@string/course_list_button_text"
            android:drawableEnd="@drawable/course_list_icon"></Button>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/nfc_reader_button_admin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:layout_marginRight="5dp"
                android:textColor="#1FAD5F"
                android:text="@string/nfc_read_button_text"
                android:drawableEnd="@drawable/nfc_read"></Button>
            <Button
                android:id="@+id/nfc_writer_button_admin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:textColor="#1FAD5F"
                android:text="@string/nfc_read_button_text"
                android:drawableEnd="@drawable/nfc_write"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>