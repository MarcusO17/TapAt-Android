<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LecturerHomepageActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/side_navigation_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/background_picture">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- someone change the icon color to black i dont know why its purple -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_menu_24"
                android:id="@+id/side_navigation_button"
                android:drawableTint="@color/black" />

            <TextView
                android:id="@+id/homepagewelcome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/julius_sans_one"
                android:gravity="end"
                android:paddingBottom="20dp"
                android:text="HOMEPAGE"
                android:textAlignment="textEnd"
                android:textColor="#FF000000"
                android:textStyle="normal"
                android:textSize="44dp" />

            <TextView
                android:id="@+id/homepagetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/julius_sans_one"
                android:text="Course Subject"
                android:textColor="#FF000000"
                android:textStyle="bold"
                android:textSize="26dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lecturerHomepageCourseList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="60dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/side_navigation_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/side_navigation_header"
        app:menu="@menu/side_navigation_menu_lecturer"
        android:maxWidth="275dp"/>

</androidx.drawerlayout.widget.DrawerLayout>


