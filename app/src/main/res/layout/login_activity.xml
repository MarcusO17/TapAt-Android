<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_picture">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/julius_sans_one"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="#5A5656"
                android:textSize="36dp" />

            <EditText
                android:id="@+id/loginIDInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ID"
                android:textColor="#5A5656"
                android:padding="16dp" />

            <EditText
                android:id="@+id/loginPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_password"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:textColor="#5A5656"
                android:layout_weight="1"
                android:padding="16dp"/>

            <!-- I dont know why the colour of the button is not changing
            with android:background="button_background_placeholder-->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:backgroundTint="#5A5656"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
