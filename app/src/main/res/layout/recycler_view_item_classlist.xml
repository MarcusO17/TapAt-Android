<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/recycler_item_background"
    android:elevation="7dp"
    >

    <TextView
        android:id="@+id/recycle_view_item_title"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/jost_light"
        android:letterSpacing="0.1"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recycle_view_item_datetime"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/recycle_view_item_title"
        android:layout_marginStart="90dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/jost_light"
        android:letterSpacing="0.05"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/class_icon"
        android:layout_marginStart="18dp"/>

</RelativeLayout>